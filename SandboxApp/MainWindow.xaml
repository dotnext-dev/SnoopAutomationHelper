<Window x:Class="SandboxApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SandboxApp"
        mc:Ignorable="d"
        Title="Automate NordVPN" Height="200" Width="300">
    <StackPanel Margin="15">
        <ComboBox x:Name="appsCmbBox">
            <ComboBoxItem IsSelected="True">NordVPN</ComboBoxItem>
        </ComboBox>
        <Button FontSize="20" Content="Run" Click="Button_Click" HorizontalAlignment="Center" Margin="20" />
        <TextBlock TextAlignment="Center" TextWrapping="Wrap">Clicking this button will run automation script in selected app</TextBlock>
    </StackPanel>
</Window>
